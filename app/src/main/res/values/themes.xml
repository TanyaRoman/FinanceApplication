    <style name="MyButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_marginRight">15dp</item>-->
<!--        <item name="android:layout_marginLeft">15dp</item>-->

        <item name="android:backgroundTint">@color/button_basic</item>
        <item name="android:textAppearance">@style/TextBasic</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>

        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/button_purple</item>

        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>

        <item name="layout_constraintWidth">353dp</item>
        <item name="layout_constraintHeight">56dp</item>

<!--        <item name="android:maxWidth">353dp</item>-->
<!--        <item name="android:maxHeight">56dp</item>-->
<!--        <item name="layout_constraintHeight_max">56dp</item>-->
        <item name="android:layout_marginTop">32dp</item>
<!--        <item name="android:elevation">4dp</item>-->
    </style>

    <style name="MyButton.Purple">
        <item name="android:backgroundTint">@color/button_purple</item>
        <item name="strokeColor">@color/text</item>
    </style>

    <style name="MyButtonText" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/TextBasic</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="TextHeader">
        <item name="android:layout_width">366dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">36dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/balsamiq_sans</item>
    </style>

    <style name="TextBasic">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/jura_light</item>
    </style>

    <style name="MyCheckBox">
        <item name="android:button">@drawable/cb_selector</item>
        <item name="android:textAppearance">@style/TextBasic</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyButton.MyEditText">
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/button_basic</item>
    </style>




    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
<!--        <item name="android:windowBackground">@drawable/window_background</item>-->
        <item name="android:background">@drawable/ic_background_first</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="textAppearanceBody1">@style/TextHeader</item>
        <item name="android:background">@color/background</item>
    </style>
