<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.financeapplication">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceApplication"
        tools:targetApi="31">
        <activity
            android:name=".screen.singin.LoginCreateActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.singin.LoginActivity"></activity>
        <activity android:name=".screen.singin.CreateActivity"></activity>
        <activity android:name=".screen.profile.MainPageActivity"></activity>
        <activity android:name=".screen.profile.ProfileActivity"></activity>
        <activity android:name=".screen.profile.ChangeProfileActivity"></activity>
        <activity android:name=".screen.portfolio.ChoiceActivity"
                  android:windowSoftInputMode="stateHidden|adjustPan"></activity>
        <activity android:name=".screen.portfolio.Result2Activity"></activity>
        <activity android:name=".screen.portfolio.PortfolioDetailingActivity"></activity>

        <activity android:name=".screen.portfolio.CoinsDetailingActivity"></activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>